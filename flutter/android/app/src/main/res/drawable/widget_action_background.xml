<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="@color/widget_action_background_start"
                android:endColor="@color/widget_action_background_end" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Border gradient (using layer-list trick) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="@color/widget_action_border_start"
                android:endColor="@color/widget_action_border_end" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Inner background to create border effect -->
    <item
        android:left="0.5dp"
        android:top="0.5dp"
        android:right="0.5dp"
        android:bottom="0.5dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="@color/widget_action_background_start"
                android:endColor="@color/widget_action_background_end" />
            <corners android:radius="7.5dp" />
        </shape>
    </item>
</layer-list>
