<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@drawable/widget_background">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:layout_marginBottom="6dp">

        <TextView
            android:id="@+id/child_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="みる"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/widget_text_primary" />

        <TextView
            android:id="@+id/child_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1歳2ヶ月"
            android:textSize="12sp"
            android:textColor="@color/widget_text_secondary"
            android:layout_marginLeft="10dp" />

    </LinearLayout>

    <!-- Record Cards -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Record 1 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/widget_card_background"
            android:padding="6dp">

            <ImageView
                android:id="@+id/record1_emoji"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/jyunyuu" />

            <TextView
                android:id="@+id/record1_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="授乳(右)"
                android:textSize="10sp"
                android:textColor="@color/widget_text_secondary"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/record1_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14:30"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/widget_text_time"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/record1_ago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30分前"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/widget_text_ago" />

        </LinearLayout>

        <!-- Record 2 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/widget_card_background"
            android:padding="6dp">

            <ImageView
                android:id="@+id/record2_emoji"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/milk" />

            <TextView
                android:id="@+id/record2_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ミルク"
                android:textSize="10sp"
                android:textColor="@color/widget_text_secondary"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/record2_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/widget_text_time"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/record2_ago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/widget_text_ago" />

        </LinearLayout>

        <!-- Record 3 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/widget_card_background"
            android:padding="6dp">

            <ImageView
                android:id="@+id/record3_emoji"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/nyou" />

            <TextView
                android:id="@+id/record3_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="尿"
                android:textSize="10sp"
                android:textColor="@color/widget_text_secondary"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/record3_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/widget_text_time"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/record3_ago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/widget_text_ago" />

        </LinearLayout>

    </LinearLayout>

    <!-- Quick Actions -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/action1"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:src="@drawable/jyunyuu"
            android:scaleType="centerInside"
            android:padding="6dp"
            android:background="@drawable/widget_action_background" />

        <ImageView
            android:id="@+id/action2"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:src="@drawable/milk"
            android:scaleType="centerInside"
            android:padding="6dp"
            android:background="@drawable/widget_action_background" />

        <ImageView
            android:id="@+id/action3"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:src="@drawable/nyou"
            android:scaleType="centerInside"
            android:padding="6dp"
            android:background="@drawable/widget_action_background" />

        <ImageView
            android:id="@+id/action4"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:src="@drawable/unti"
            android:scaleType="centerInside"
            android:padding="6dp"
            android:background="@drawable/widget_action_background" />

        <ImageView
            android:id="@+id/action5"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:src="@drawable/taion"
            android:scaleType="centerInside"
            android:padding="6dp"
            android:background="@drawable/widget_action_background" />

    </LinearLayout>

</LinearLayout>
