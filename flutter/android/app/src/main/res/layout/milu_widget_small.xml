<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/widget_background">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="0dp"
        android:paddingBottom="2dp"
        android:layout_marginBottom="0dp">

        <TextView
            android:id="@+id/child_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="みる"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/widget_text_primary"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/child_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1歳2ヶ月"
            android:textSize="12sp"
            android:textColor="@color/widget_text_secondary" />

    </LinearLayout>

    <!-- Latest Record -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="bottom|start"
        android:padding="0dp">

        <!-- Record info (emoji + label) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/record_emoji"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/jyunyuu" />

            <TextView
                android:id="@+id/record_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="授乳(右)"
                android:textSize="12sp"
                android:textColor="@color/widget_text_secondary"
                android:layout_marginLeft="6dp" />

        </LinearLayout>

        <!-- Record time -->
        <TextView
            android:id="@+id/record_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14:30"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/widget_text_time"
            android:layout_marginTop="4dp" />

        <!-- Elapsed time -->
        <TextView
            android:id="@+id/record_ago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30分前"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/widget_text_ago" />

    </LinearLayout>

</LinearLayout>
