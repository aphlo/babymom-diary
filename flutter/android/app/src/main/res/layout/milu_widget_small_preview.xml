<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/widget_background">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/widget_header_background"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_marginBottom="6dp">

        <TextView
            android:id="@+id/child_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="みる"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/widget_text_primary"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/child_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3ヶ月15日目"
            android:textSize="10sp"
            android:textColor="@color/widget_text_secondary" />

    </LinearLayout>

    <!-- Latest Record -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/widget_card_background"
        android:padding="8dp">

        <ImageView
            android:id="@+id/record_emoji"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/jyunyuu" />

        <TextView
            android:id="@+id/record_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="授乳(右)"
            android:textSize="11sp"
            android:textColor="@color/widget_text_secondary"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/record_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14:30"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/widget_text_time"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/record_ago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1時間45分前"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/widget_text_ago" />

    </LinearLayout>

</LinearLayout>
